<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: #edf7ef;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/20.0.2" fx:controller="controllers.Panier">

    <!-- Barre du haut -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white;">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <children>
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="RecyConnect" />
                <TextField prefWidth="200" promptText="Recherche" />
                <Region HBox.hgrow="ALWAYS" />
                <Button style="-fx-font-size: 16px;" text="🔔" />
                <MenuButton text="Sahar Mnif">
                    <items>
                        <MenuItem text="Profil" />
                        <MenuItem text="Déconnexion" />
                    </items>
                </MenuButton>
            </children>
        </HBox>
    </top>

    <!-- Contenu principal -->
    <center>
        <VBox alignment="CENTER">
            <VBox alignment="TOP_LEFT" maxWidth="850" spacing="20" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0.2, 0, 4);">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>

                <!-- Titre -->
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="🧺 Votre panier" />

                <!-- En-tête du tableau -->
                <HBox spacing="30" style="-fx-background-color: #f5f5f5; -fx-background-radius: 8; -fx-padding: 10;">
                    <Label style="-fx-font-weight: bold; -fx-pref-width: 250;" text="Produit" />
                    <Label style="-fx-font-weight: bold; -fx-pref-width: 100;" text="Prix" />
                    <Label style="-fx-font-weight: bold; -fx-pref-width: 150;" text="Quantité" />
                    <Label style="-fx-font-weight: bold; -fx-pref-width: 100;" text="Total" />
                    <Label style="-fx-font-weight: bold; -fx-pref-width: 100;" text="Actions" />
                </HBox>

                <!-- Lignes des articles -->
                <VBox fx:id="panierContainer" spacing="10" style="-fx-padding: 10;" />

                <!-- Section Total -->
                <VBox alignment="CENTER_RIGHT" spacing="10">
                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Total TTC : " />
                        <Label fx:id="totalLabel" style="-fx-font-size: 18px; -fx-text-fill: #1b5e20; -fx-font-weight: bold;" text="0.00 DT" />
                    </HBox>

                    <!-- Boutons -->
                    <HBox alignment="CENTER_RIGHT" spacing="15">
                        <Button fx:id="btnvider" onAction="#viderPanier" style="-fx-background-color: #1b5e20; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16;" text="❌ Vider" />
                        <Button fx:id="finaliserBtn" onAction="#finaliserCommande" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16;" text="✅ Finaliser commande" />
                    </HBox>
                </VBox>

            </VBox>
        </VBox>
    </center>

</BorderPane>