<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.formAjoutArticle">

    <!-- BODY + FOOTER (scrollable) -->
    <center>
        <ScrollPane fitToWidth="true" pannable="true" style="-fx-background-color: transparent;">
            <content>
                <VBox spacing="30" style="-fx-padding: 20; -fx-background-color: white;" prefWidth="1000">

                    <!-- BANNIÈRE -->
                    <StackPane prefHeight="400">
                        <ImageView fitHeight="400" preserveRatio="true">
                            <Image url="@carousel-1.jpg" />
                        </ImageView>
                        <Region style="-fx-background-color: rgba(15,66,41,0.6);" StackPane.alignment="CENTER" />
                        <VBox alignment="CENTER" spacing="10">
                            <Label style="-fx-text-fill: white; -fx-font-size: 48px; -fx-font-weight: bold;" text="Magasin RecyConnect" />
                            <Label style="-fx-text-fill: white; -fx-font-size: 18px;" text="Nous n'avons qu'une seule planète Terre, et nous devons la préserver" />
                        </VBox>
                    </StackPane>

                    <!-- FORMULAIRE + IMAGE -->
                    <HBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 20;">
                        <!-- FORM -->
                        <VBox alignment="TOP_CENTER" spacing="15" prefWidth="750" maxWidth="750">
                            <Label style="-fx-text-fill: green; -fx-font-size: 18px; -fx-font-weight: bold;" text="Veuillez remplir les détails de votre article convenablement" />
                            <Label style="-fx-text-fill: #093f2e; -fx-font-size: 36px; -fx-font-weight: bold;" text="Proposez un article" />

                            <TextField fx:id="nomArticleField" promptText="Nom de l'article" prefWidth="750" />
                            <TextField fx:id="imageArticleField" promptText="Nom de l'image (temporaire)" prefWidth="750" />
                            <ComboBox fx:id="categorieComboBox" promptText="Catégorie" prefWidth="750" />
                            <TextField fx:id="localisationField" promptText="Localisation" prefWidth="750" />

                            <HBox spacing="10">
                                <TextField fx:id="quantiteField" promptText="Quantité de l'article en Kg" HBox.hgrow="ALWAYS" />
                                <TextField fx:id="prixField" promptText="Prix unitaire en dinar" HBox.hgrow="ALWAYS" />
                            </HBox>

                            <!-- Zone de description bien dimensionnée -->
                            <TextArea fx:id="descriptionArticleArea"
                                      promptText="Description"
                                      prefRowCount="6"
                                      prefHeight="150"
                                      prefWidth="750"
                                      maxWidth="750"
                                      wrapText="true"
                                      VBox.vgrow="NEVER"
                                      style="-fx-font-size: 14px;" />

                            <!-- Boutons -->
                            <HBox spacing="15">
                                <Button fx:id="confirmerArticleButton"
                                        text="Confirmer"
                                        style="-fx-background-color: green; -fx-text-fill: white; -fx-font-size: 14px;"
                                        prefWidth="140"
                                        prefHeight="45" />
                                <Button fx:id="annulerArticleButton"
                                        text="Annuler"
                                        style="-fx-background-color: #3a3b4a; -fx-text-fill: white; -fx-font-size: 14px;"
                                        prefWidth="140"
                                        prefHeight="45" />
                            </HBox>
                        </VBox>

                        <!-- IMAGE À DROITE -->
                        <ImageView fitHeight="450" preserveRatio="true">
                            <Image url="@kk.jpg" />
                        </ImageView>
                    </HBox>

                    <!-- FOOTER -->
                    <VBox spacing="0">
                        <HBox alignment="CENTER" spacing="80" style="-fx-background-color: #064d2d; -fx-padding: 30;">
                            <VBox spacing="8">
                                <Label style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 18px;" text="Nos contacts" />
                                <Label style="-fx-text-fill: white;" text="📍 Esprit Ariana" />
                                <Label style="-fx-text-fill: white;" text="📞 +216 95 123 742" />
                                <Label style="-fx-text-fill: white;" text="✉ RecyConnect@gmail.com" />
                                <HBox spacing="10">
                                    <Label style="-fx-text-fill: white; -fx-font-size: 18px;" text="" />
                                    <Label style="-fx-text-fill: white; -fx-font-size: 18px;" text="" />
                                    <Label style="-fx-text-fill: white; -fx-font-size: 18px;" text="" />
                                </HBox>
                            </VBox>

                            <VBox spacing="8">
                                <Label style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 18px;" text="Services" />
                                <Label style="-fx-text-fill: white;" text="› Vente De Produits À Recyclés" />
                                <Label style="-fx-text-fill: white;" text="› Organisation Des Évènements" />
                                <Label style="-fx-text-fill: white;" text="› Prossition De Workshops" />
                                <Label style="-fx-text-fill: white;" text="› Forum Et Communauté" />
                                <Label style="-fx-text-fill: white;" text="› Green Technology" />
                            </VBox>

                            <VBox spacing="8">
                                <Label style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 18px;" text="Liens Utiles" />
                                <Label style="-fx-text-fill: white;" text="› À Propos De Nous" />
                                <Label style="-fx-text-fill: white;" text="› Nos Services" />
                            </VBox>
                        </HBox>

                        <HBox alignment="CENTER" style="-fx-background-color: #02351e; -fx-padding: 10;">
                            <Label style="-fx-text-fill: white;" text="© RecyConnect, Tous droits réservés." />
                            <Pane HBox.hgrow="ALWAYS" />
                            <Label style="-fx-text-fill: white;" text="Développé par TechSquad" />
                        </HBox>
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
