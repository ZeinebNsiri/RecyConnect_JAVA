<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.ListeCommandesController"
            style="-fx-background-color: #f3f8f3; -fx-padding: 30;">

    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <!-- Carte style tableau -->
            <VBox maxWidth="1000" spacing="20"
                  style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0.1, 0, 4);">

                <padding>
                    <Insets top="30" bottom="30" left="30" right="30"/>
                </padding>

                <Label text="Liste des Commandes"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #193c6d;" />

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Filtrer :" style="-fx-font-weight: bold;" />
                    <ComboBox fx:id="filterComboBox" prefWidth="200">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Toutes les commandes" />
                                <String fx:value="Payées" />
                                <String fx:value="Non payées" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </HBox>

                <TableView fx:id="commandesTable" prefHeight="400" prefWidth="920"
                           style="-fx-border-color: transparent; -fx-background-radius: 10;">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="prixColumn" text="Prix Total" prefWidth="100"/>
                        <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
                        <TableColumn fx:id="statutCommandeColumn" text="Statut" prefWidth="120"/>
                        <TableColumn fx:id="clientColumn" text="Nom du client" prefWidth="150"/>
                        <TableColumn fx:id="articlesColumn" text="Articles" prefWidth="150"/>
                    </columns>
                </TableView>
                <!--  pagination  -->
                <HBox fx:id="paginationContainer"
                      alignment="CENTER"
                      spacing="8"
                      style="-fx-padding: 10 0 0 0;" />
            </VBox>
        </VBox>
    </center>
</BorderPane>
