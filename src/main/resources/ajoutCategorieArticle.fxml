<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:controller="controllers.ajoutCategorieArticle"
            prefHeight="600.0" prefWidth="1000.0"
            style="-fx-background-color: #edf7ef;"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/23.0.1">

    <!-- ======= HEADER ======= -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white;">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <children>
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="RecyConnect" />
                <TextField prefWidth="200" promptText="recherche" />
                <Region HBox.hgrow="ALWAYS" />
                <Button style="-fx-font-size: 16px;" text="🔔" />
                <MenuButton text="zeineb zeineb">
                    <items>
                        <MenuItem text="Profil" />
                        <MenuItem text="Déconnexion" />
                    </items>
                </MenuButton>
            </children>
        </HBox>
    </top>

    <!-- ======= SIDEBAR ======= -->
    <left>
        <VBox alignment="TOP_LEFT" prefWidth="230" spacing="10" style="-fx-background-color: white;">
            <padding>
                <Insets bottom="10" left="20" right="10" top="20" />
            </padding>
            <children>
                <Label text="📊 Dashboard" />
                <Label text="👤 Utilisateurs" />

                <TitledPane expanded="false" text="🏬 Ventes">
                    <content>
                        <VBox spacing="5">
                            <Label text="• Catégories articles" />
                            <Label text="• Articles" />
                            <Label text="• Commandes" />
                        </VBox>
                    </content>
                </TitledPane>

                <TitledPane expanded="false" text="🗓️ Événement">
                    <content>
                        <VBox spacing="5">
                            <Label text="• Gestion Événement" />
                            <Label text="• Gestion Réservations" />
                        </VBox>
                    </content>
                </TitledPane>

                <TitledPane expanded="false" text="📈 Workshops">
                    <content>
                        <VBox spacing="5">
                            <Label text="• Catégories workshops" />
                            <Label text="• Workshops" />
                        </VBox>
                    </content>
                </TitledPane>

                <Label text="📝 Posts" />
            </children>
        </VBox>
    </left>

    <!-- ======= FORMULAIRE  ======= -->
    <center>
        <VBox alignment="TOP_LEFT" spacing="20.0">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>
            <children>
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Les catégories des articles proposés" />

                <!-- Carte blanche arrondie -->
                <VBox prefWidth="700" spacing="15.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.2, 0, 4);">
                    <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Ajouter une nouvelle catégorie" />

                        <TextField fx:id="idCategorieField" visible="false" />
                        <TextField fx:id="nomCategorieField" promptText="Nom de la catégorie" />
                        <TextArea fx:id="descriptionCategorieField" prefRowCount="4" promptText="Description" wrapText="true" />
                        <TextField fx:id="nomImagecatField" promptText="Nom de l'image (temporaire)" />

                        <HBox alignment="CENTER" spacing="10">
                            <Button fx:id="confirmAddCatBtn" onAction="#ajouterCategorieArticleAction" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Confirmer" />
                            <Button fx:id="cancelCatBtn" text="Annuler" style="-fx-background-color: #6c757d; -fx-text-fill: white;" onAction="#annulerAction"/>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>

</BorderPane>
