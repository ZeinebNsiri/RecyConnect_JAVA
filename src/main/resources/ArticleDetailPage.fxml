<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<?import java.lang.String?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ArticleDetailController"
            prefWidth="1000" prefHeight="600"
            styleClass="root">

    <stylesheets>
        <String fx:value="articleDetail.css" />
    </stylesheets>

    <center>
        <VBox spacing="10">

            <!-- CONTENU SCROLLABLE -->
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <VBox spacing="30" alignment="CENTER" >

                    <!-- Zone article (image + infos) -->
                    <HBox spacing="60" alignment="CENTER" styleClass="main-content">

                        <!-- Colonne image -->
                        <VBox alignment="CENTER" spacing="10">
                            <ImageView fx:id="articleImage" fitWidth="400" fitHeight="400" preserveRatio="true" />
                        </VBox>

                        <!-- Colonne texte -->
                        <VBox spacing="15" alignment="TOP_LEFT">
                            <Label fx:id="articleName" styleClass="title-label" />
                            <Label text="Catégorie:" styleClass="subtitle-label"/>
                            <Label fx:id="articleCategory" styleClass="normal-label" />
                            <Label text="Description:" styleClass="subtitle-label"/>
                            <Label fx:id="articleDescription" styleClass="normal-label" />
                            <Label text="Localisation:" styleClass="subtitle-label"/>
                            <Label fx:id="articleLocation" styleClass="normal-label" />
                            <Button fx:id="orderButton" text="Ajouter au panier" onAction="#addToCart" styleClass="green-button"/>
                        </VBox>

                        <!-- Colonne prix/quantité -->
                        <VBox spacing="30" alignment="TOP_CENTER">
                            <VBox spacing="5" alignment="CENTER">
                                <Label text="💲" styleClass="icon-label"/>
                                <Label text="Le prix unitaire de l’article" styleClass="small-label"/>
                                <Label fx:id="priceLabel" styleClass="bold-label"/>
                            </VBox>

                            <VBox spacing="5" alignment="CENTER">
                                <Label text="🛒" styleClass="icon-label"/>
                                <Label text="La quantité proposée" styleClass="small-label"/>
                                <Label fx:id="quantityLabel" styleClass="bold-label"/>
                            </VBox>
                        </VBox>
                    </HBox>

                    <!-- MAP -->
                    <VBox spacing="10" alignment="CENTER">
                        <Label text="Localisation sur la carte :" styleClass="subtitle-label" />
                        <WebView fx:id="mapView"
                                 prefWidth="1000"
                                 prefHeight="500"
                                 minWidth="800"
                                 minHeight="400"
                                 maxWidth="Infinity"
                                 maxHeight="Infinity"
                        />
                    </VBox>

                    <!-- ✅ FOOTER déplacé ici -->
                    <VBox spacing="0">
                        <HBox alignment="CENTER" spacing="80" styleClass="footer-section">
                            <VBox spacing="8">
                                <Label text="Nos contacts" styleClass="footer-title" />
                                <Label text="📍 Esprit Ariana" styleClass="footer-label" />
                                <Label text="📞 +216 95 123 742" styleClass="footer-label" />
                                <Label text="✉ RecyConnect@gmail.com" styleClass="footer-label" />
                                <HBox spacing="10" styleClass="footer-icons">
                                    <Label text="" />
                                    <Label text="" />
                                    <Label text="" />
                                </HBox>
                            </VBox>

                            <VBox spacing="8">
                                <Label text="Services" styleClass="footer-title" />
                                <Label text="› Vente De Produits À Recyclés" styleClass="footer-label" />
                                <Label text="› Organisation Des Évènements" styleClass="footer-label" />
                                <Label text="› Prossition De Workshops" styleClass="footer-label" />
                                <Label text="› Forum Et Communauté" styleClass="footer-label" />
                                <Label text="› Green Technology" styleClass="footer-label" />
                            </VBox>

                            <VBox spacing="8">
                                <Label text="Liens Utiles" styleClass="footer-title" />
                                <Label text="› À Propos De Nous" styleClass="footer-label" />
                                <Label text="› Nos Services" styleClass="footer-label" />
                            </VBox>
                        </HBox>

                        <HBox alignment="CENTER" styleClass="footer-bottom">
                            <Label text="© RecyConnect, Tous droits réservés." />
                            <Pane HBox.hgrow="ALWAYS" />
                            <Label text="Développé par TechSquad" />
                        </HBox>
                    </VBox>

                </VBox>
            </ScrollPane>

        </VBox>
    </center>

</BorderPane>
