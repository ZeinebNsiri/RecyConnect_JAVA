<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.Reservations.EventReservationController"
      spacing="20" style="-fx-padding: 30; -fx-background-color: #f8f9fa;">

    <Label fx:id="titleLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <Label fx:id="eventInfoLabel" wrapText="true" style="-fx-font-size: 14px;"/>
    <Label fx:id="remainingPlacesLabel" style="-fx-font-size: 14px; -fx-text-fill: #2a6496;"/>

    <Separator/>

    <GridPane hgap="10" vgap="15">
        <Label text="Nom complet*:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>
        <Label fx:id="nameErrorLabel" style="-fx-text-fill: red;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Email*:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Label fx:id="emailErrorLabel" style="-fx-text-fill: red;" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Téléphone*:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        <Label fx:id="phoneErrorLabel" style="-fx-text-fill: red;" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Nombre de places*:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="placesField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
        <Label fx:id="placesErrorLabel" style="-fx-text-fill: red;" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <Label text="Demandes spéciales:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <TextArea fx:id="specialRequestField" wrapText="true" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Retour" onAction="#handleBack" style="-fx-background-color: #6c757d; -fx-text-fill: white;"/>
        <Button fx:id="submitButton" text="Valider" onAction="#handleSubmit"
                style="-fx-background-color: #28a745; -fx-text-fill: white;" disable="true"/>
    </HBox>
</VBox>