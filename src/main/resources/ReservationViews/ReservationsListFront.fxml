<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.Reservations.ReservationsListFrontController"
            style="-fx-background-color: #f8f9fa;"
            prefWidth="1200" prefHeight="800">

      <top>
            <VBox spacing="15" style="-fx-background-color: linear-gradient(to right, #043c1c, #198754); -fx-padding: 25 30 25 30;">
                  <Label text="Mes Réservations"
                         style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0.2, 0, 1);"/>

                  <!-- Barre de recherche -->
                  <!-- Navigation -->
                  <HBox spacing="10">
                        <Button text="🔍 Trouver des Événements"
                                style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 8 20; -fx-background-radius: 20;"/>
                  </HBox>
                  <HBox spacing="10">
                        <TextField fx:id="searchField" promptText="Nom de l'événement"
                                   style="-fx-background-radius: 8; -fx-padding: 8; -fx-font-size: 13px;" HBox.hgrow="ALWAYS"/>
                        <ComboBox fx:id="statusComboBox" promptText="Tous les statuts"
                                  style="-fx-background-radius: 8; -fx-font-size: 13px;" prefWidth="200"/>
                        <DatePicker fx:id="searchDatePicker" promptText="jj/mm/aaaa"
                                    style="-fx-background-radius: 8; -fx-font-size: 13px;" />

                  </HBox>



            </VBox>
      </top>

      <center>
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER"
                        style="-fx-background: #f8f9fa; -fx-border-color: transparent; -fx-padding: 0;">
                  <VBox fx:id="reservationsContainer" spacing="20"
                        style="-fx-background-color: #f8f9fa; -fx-padding: 20 30;">

                        <!-- Example reservation card 1 -->
                        <VBox style="-fx-background-color: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-color: #e9ecef; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2); -fx-padding: 20;">
                              <HBox>
                                    <VBox spacing="10" HBox.hgrow="ALWAYS">
                                          <Label text="🏫 Atelier de Fabrication de Meubles à partir de Bois Recyclé"
                                                 style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #198754;"/>

                                          <HBox spacing="20">
                                                <HBox spacing="5">
                                                      <Label text="🕒 Date:" style="-fx-text-fill: #6c757d;"/>
                                                      <Label text="01/03/2025 à 21:00" style="-fx-text-fill: #495057;"/>
                                                </HBox>

                                                <HBox spacing="5">
                                                      <Label text="📍 Lieu:" style="-fx-text-fill: #6c757d;"/>
                                                      <Label text="en ligne" style="-fx-text-fill: #495057;"/>
                                                </HBox>
                                          </HBox>

                                          <HBox spacing="20">
                                                <HBox spacing="5">
                                                      <Label text="Places réservées:" style="-fx-text-fill: #6c757d;"/>
                                                      <Label text="1 place(s)" style="-fx-background-color: #e6f3ec; -fx-text-fill: #198754; -fx-padding: 2 8; -fx-background-radius: 3;"/>
                                                </HBox>

                                                <HBox spacing="5">
                                                      <Label text="Statut:" style="-fx-text-fill: #6c757d;"/>
                                                      <Label text="active" style="-fx-background-color: #198754; -fx-text-fill: white; -fx-padding: 2 8; -fx-background-radius: 3;"/>
                                                </HBox>
                                          </HBox>
                                    </VBox>

                                    <HBox alignment="BOTTOM_RIGHT" spacing="10">
                                          <Button text="🖊️ Modifier"
                                                  style="-fx-background-color: #e6f3ec; -fx-text-fill: #198754; -fx-background-radius: 8; -fx-padding: 7 15;"/>
                                          <Button text="❌ Annuler"
                                                  style="-fx-background-color: #ffebee; -fx-text-fill: #d32f2f; -fx-background-radius: 8; -fx-padding: 7 15;"/>
                                    </HBox>
                              </HBox>
                        </VBox>

                        <!-- Example reservation card 2 -->
                        <VBox style="-fx-background-color: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-color: #e9ecef; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2); -fx-padding: 20;">
                              <HBox>
                                    <VBox spacing="10" HBox.hgrow="ALWAYS">
                                          <Label text="🌿 Conférence sur le Recyclage et l'Environnement"
                                                 style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #198754;"/>

                                          <HBox spacing="20">
                                                <HBox spacing="5">
                                                      <Label text="🕒 Date:" style="-fx-text-fill: #6c757d;"/>
                                                      <Label text="15/03/2025 à 14:00" style="-fx-text-fill: #495057;"/>
                                                </HBox>

                                                <HBox spacing="5">
                                                      <Label text="📍 Lieu:" style="-fx-text-fill: #6c757d;"/>
                                                      <Label text="en ligne" style="-fx-text-fill: #495057;"/>
                                                </HBox>
                                          </HBox>

                                          <HBox spacing="20">
                                                <HBox spacing="5">
                                                      <Label text="Places réservées:" style="-fx-text-fill: #6c757d;"/>
                                                      <Label text="1 place(s)" style="-fx-background-color: #e6f3ec; -fx-text-fill: #198754; -fx-padding: 2 8; -fx-background-radius: 3;"/>
                                                </HBox>

                                                <HBox spacing="5">
                                                      <Label text="Statut:" style="-fx-text-fill: #6c757d;"/>
                                                      <Label text="active" style="-fx-background-color: #198754; -fx-text-fill: white; -fx-padding: 2 8; -fx-background-radius: 3;"/>
                                                </HBox>
                                          </HBox>
                                    </VBox>

                                    <HBox alignment="BOTTOM_RIGHT" spacing="10">
                                          <Button text="🖊️ Modifier"
                                                  style="-fx-background-color: #e6f3ec; -fx-text-fill: #198754; -fx-background-radius: 8; -fx-padding: 7 15;"/>
                                          <Button text="❌ Annuler"
                                                  style="-fx-background-color: #ffebee; -fx-text-fill: #d32f2f; -fx-background-radius: 8; -fx-padding: 7 15;"/>
                                    </HBox>
                              </HBox>
                        </VBox>

                        <!-- These are examples; your controller will generate these dynamically -->
                  </VBox>
            </ScrollPane>
      </center>

      <!-- Scroll to top button in bottom-right corner -->
      <right>
            <VBox alignment="BOTTOM_RIGHT" style="-fx-padding: 20;">
                  <Button text="↑"
                          style="-fx-background-color: #198754; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 30; -fx-min-width: 40; -fx-min-height: 40; -fx-max-width: 40; -fx-max-height: 40; -fx-font-size: 18px;"/>
            </VBox>
      </right>

      <bottom>
            <HBox style="-fx-background-color: #e9ecef; -fx-padding: 10 20;" alignment="CENTER_RIGHT">
                  <Label text="© 2025 Événements Écologiques" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
            </HBox>
      </bottom>
</BorderPane>