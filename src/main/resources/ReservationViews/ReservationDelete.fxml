<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/17"
      fx:controller="controllers.Reservations.ReservationDeleteController"
      spacing="20" alignment="CENTER" prefWidth="400" prefHeight="200"
      style="-fx-background-color: white;">

    <padding><Insets top="20" left="20" right="20" bottom="20"/></padding>

    <Label fx:id="nameLabel" wrapText="true"
           style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <HBox spacing="10">
        <Button fx:id="confirmButton" text="Supprimer" onAction="#confirmDelete"
                style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
        <Button fx:id="cancelButton" text="Annuler" onAction="#cancelDelete"
                style="-fx-background-color: #6c757d; -fx-text-fill: white;"/>
    </HBox>
</VBox>
