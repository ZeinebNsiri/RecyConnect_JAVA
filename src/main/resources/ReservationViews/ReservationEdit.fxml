<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17"
            fx:controller="controllers.Reservations.ReservationEditController"
            fitToWidth="true"
            style="-fx-background-color: transparent;">

    <content>
        <VBox alignment="TOP_CENTER" spacing="30"
              style="-fx-background-color: #f0f2f5; -fx-padding: 40;">

            <!-- Title -->
            <Label text="✏️ Modifier la Réservation"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <!-- Card -->
            <VBox spacing="20" alignment="TOP_LEFT"
                  style="-fx-background-color: white; -fx-padding: 30; -fx-border-color: #e0e0e0;
                         -fx-border-radius: 12; -fx-background-radius: 12;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 4);">

                <!-- Nom -->
                <VBox spacing="6">
                    <Label text="Nom complet" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                    <TextField fx:id="nameField" promptText="Entrez le nom complet"
                               style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #ccc;
                                      -fx-padding: 8 10; -fx-font-size: 14px;" />
                    <Label fx:id="nameError" textFill="red" visible="false" style="-fx-font-size: 12px;" />
                </VBox>

                <!-- Email -->
                <VBox spacing="6">
                    <Label text="Adresse Email" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                    <TextField fx:id="emailField" promptText="exemple@mail.com"
                               style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #ccc;
                                      -fx-padding: 8 10; -fx-font-size: 14px;" />
                    <Label fx:id="emailError" textFill="red" visible="false" style="-fx-font-size: 12px;" />
                </VBox>

                <!-- Téléphone -->
                <VBox spacing="6">
                    <Label text="Téléphone" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                    <TextField fx:id="phoneField" promptText="Ex: 22123456"
                               style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #ccc;
                                      -fx-padding: 8 10; -fx-font-size: 14px;" />
                    <Label fx:id="phoneError" textFill="red" visible="false" style="-fx-font-size: 12px;" />
                </VBox>

                <VBox spacing="6">
                    <Label text="Nombre de places réservées" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                    <Spinner fx:id="placesSpinner"
                             style="-fx-background-radius: 6; -fx-border-color: #ccc; -fx-border-radius: 6;
                    -fx-padding: 2 10; -fx-font-size: 14px;" />
                    <Label fx:id="placesError" textFill="red" visible="false" style="-fx-font-size: 12px;" />
                </VBox>

            </VBox>

            <!-- Action Buttons -->
            <HBox spacing="25" alignment="CENTER">
                <Button text="Enregistrer"
                        onAction="#handleSave"
                        style="-fx-background-color: #28a745; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-font-size: 14px;
                               -fx-padding: 10 20; -fx-background-radius: 8;" />

                <Button text="Annuler"
                        onAction="#handleCancel"
                        style="-fx-background-color: #dc3545; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-font-size: 14px;
                               -fx-padding: 10 20; -fx-background-radius: 8;" />
            </HBox>

        </VBox>
    </content>
</ScrollPane>
