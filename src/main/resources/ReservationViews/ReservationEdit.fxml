<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.Reservations.ReservationEditController"
      spacing="12" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: white;">

    <Label text="Modifier Réservation" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <VBox spacing="4" alignment="CENTER_LEFT">
        <TextField fx:id="nameField" promptText="Nom complet" />
        <Label fx:id="nameError" textFill="red" visible="false" />
    </VBox>

    <VBox spacing="4" alignment="CENTER_LEFT">
        <TextField fx:id="emailField" promptText="Email" />
        <Label fx:id="emailError" textFill="red" visible="false" />
    </VBox>

    <VBox spacing="4" alignment="CENTER_LEFT">
        <TextField fx:id="phoneField" promptText="Téléphone" />
        <Label fx:id="phoneError" textFill="red" visible="false" />
    </VBox>

    <VBox spacing="4" alignment="CENTER_LEFT">
        <Spinner fx:id="placesSpinner" />
        <Label fx:id="placesError" textFill="red" visible="false" />
    </VBox>

    <VBox spacing="4" alignment="CENTER_LEFT">
        <ComboBox fx:id="statusCombo" promptText="Statut" />
        <Label fx:id="statusError" textFill="red" visible="false" />
    </VBox>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Mettre à jour" onAction="#handleSave"
                style="-fx-background-color: #0d6efd; -fx-text-fill: white; -fx-font-weight: bold;" />
        <Button text="Annuler" onAction="#handleCancel"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold;" />
    </HBox>
</VBox>
