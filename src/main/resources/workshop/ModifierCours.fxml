<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.workshop.ModifierCours"
            prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: #edf7ef;">
    <!-- HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white;">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <children>
                <Label text="RecyConnect" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <TextField promptText="recherche" prefWidth="200"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="🔔" style="-fx-font-size: 16px;"/>
                <MenuButton text="user">
                    <items>
                        <MenuItem text="Profil"/>
                        <MenuItem text="Déconnexion"/>
                    </items>
                </MenuButton>
            </children>
        </HBox>
    </top>

    <!-- SIDEBAR -->
    <left>
        <VBox alignment="TOP_LEFT" prefWidth="230" spacing="10" style="-fx-background-color: white;">
            <padding>
                <Insets top="20" right="10" bottom="10" left="20"/>
            </padding>
            <children>
                <Label text="📊 Dashboard"/>
                <Label text="👤 Utilisateurs"/>
                <TitledPane text="🏬 Ventes" expanded="false">
                    <content>
                        <VBox spacing="5">
                            <Label text="• Catégories articles"/>
                            <Label text="• Articles"/>
                            <Label text="• Commandes"/>
                        </VBox>
                    </content>
                </TitledPane>
                <TitledPane text="🗓️ Événement" expanded="false">
                    <content>
                        <VBox spacing="5">
                            <Label text="• Gestion Événement"/>
                            <Label text="• Gestion Réservations"/>
                        </VBox>
                    </content>
                </TitledPane>
                <TitledPane text="📈 Workshops" expanded="true">
                    <content>
                        <VBox spacing="5">
                            <Label text="• Catégories workshops"/>
                            <Label text="• Workshops"/>
                        </VBox>
                    </content>
                </TitledPane>
                <Label text="📝 Posts"/>
            </children>
        </VBox>
    </left>


    <center>
        <VBox alignment="TOP_LEFT" spacing="15">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>
            <children>
                <VBox spacing="15" prefWidth="700"
                      style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.2, 0, 4);">
                    <children>
                        <Label text="Modifier Workshop" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>


                        <VBox spacing="5">
                            <Label text="Image du workshop:"/>
                            <HBox spacing="10">
                                <Button fx:id="browseImageBtn" text="Choisir une image" onAction="#handleImageBrowse"/>
                                <Label fx:id="imageLabel" text="Aucune image choisie"/>
                            </HBox>
                            <Label fx:id="errorImage" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
                        </VBox>


                        <VBox spacing="5">
                            <Label text="Titre du workshop:"/>
                            <TextField fx:id="titreField" promptText="Entrez le titre"/>
                            <Label fx:id="errorTitre" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
                        </VBox>


                        <VBox spacing="5">
                            <Label text="Catégorie du workshop:"/>
                            <ComboBox fx:id="categorieCombo" promptText="Sélectionnez une catégorie"/>
                            <Label fx:id="errorCategorie" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
                        </VBox>


                        <VBox spacing="5">
                            <Label text="Description du workshop:"/>
                            <TextArea fx:id="descriptionField" promptText="Entrez la description" wrapText="true" prefRowCount="3"/>
                            <Label fx:id="errorDescription" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
                        </VBox>


                        <VBox spacing="5">
                            <Label text="Vidéo du workshop (optionnel):"/>
                            <HBox spacing="10">
                                <Button fx:id="browseVideoBtn" text="Choisir une vidéo" onAction="#handleVideoBrowse"/>
                                <Label fx:id="videoLabel" text="Aucune vidéo choisie"/>
                            </HBox>
                            <Label fx:id="errorVideo" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
                        </VBox>


                        <HBox alignment="CENTER" spacing="15">
                            <Button fx:id="btnModifier" text="Modifier" onAction="#updateCours" style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
                            <Button fx:id="btnAnnuler" text="Annuler" onAction="#annulerCours" style="-fx-background-color: #6c757d; -fx-text-fill: white;"/>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>
