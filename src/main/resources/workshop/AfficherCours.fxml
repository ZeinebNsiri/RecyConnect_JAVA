<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.Region?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.workshop.AfficherCours"
      spacing="15" alignment="TOP_LEFT">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Liste des Workshops" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="Filtrer par Catégorie" />
        <ComboBox fx:id="categorieFilterComboBox" promptText="Tous"/>
    </HBox>

    <Button fx:id="btnAjouter" text="+ Ajouter Workshop"
            style="-fx-background-color: #28a745; -fx-text-fill: white;"/>

    <TableView fx:id="coursTableView">
        <columns>
            <TableColumn fx:id="colId" text="#" />
            <TableColumn fx:id="colImage" text="Image" />
            <TableColumn fx:id="colTitre" text="Titre du workshop" />
            <TableColumn fx:id="colCategorie" text="Catégorie" />
            <TableColumn fx:id="colDescription" text="Description" />
            <TableColumn fx:id="colVideo" text="Vidéo" />
            <TableColumn fx:id="colDetails" text="Actions" />
        </columns>
    </TableView>
</VBox>
