<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- src/main/resources/workshop/AfficherCours.fxml -->
<?import javafx.scene.layout.Region?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.workshop.AfficherCours"
      alignment="TOP_LEFT" spacing="15">

    <!-- Padding autour de la vue -->
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Carte blanche avec ombre -->
    <VBox prefWidth="700" spacing="15"
          style="-fx-background-color: white;
                 -fx-padding: 20;
                 -fx-background-radius: 10;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.2, 0, 4);">

        <!-- Entête + bouton Ajouter -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Liste des workshops"
                   style="-fx-font-size:18px; -fx-font-weight:bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>

        <Button fx:id="btnAjouter"
                text="+ Ajouter workshop"
                style="-fx-background-color: #28a745; -fx-text-fill: white;"/>

        <!-- Tableau des cours -->
        <TableView fx:id="coursTableView">
            <columns>
                <TableColumn fx:id="colId" text="ID" />
                <TableColumn fx:id="colImage" text="Image" />
                <TableColumn fx:id="colTitre" text="Titre" />
                <TableColumn fx:id="colCategorie" text="Catégorie" />
                <TableColumn fx:id="colDescription" text="Description" />
                <TableColumn fx:id="colVideo" text="Vidéo" />
                <TableColumn fx:id="colDetails" text="Détails" />
            </columns>
        </TableView>

    </VBox>
</VBox>
