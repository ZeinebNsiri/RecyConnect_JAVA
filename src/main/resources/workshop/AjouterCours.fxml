<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- src/main/resources/workshop/AjouterCours.fxml -->
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.workshop.AjouterCours"
      alignment="TOP_LEFT" spacing="15">

    <!-- Padding autour du formulaire -->
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Card blanche avec ombre -->
    <VBox prefWidth="700" spacing="10"
          style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.2, 0, 4);">

        <!-- Titre du form -->
        <Label text="Ajouter Cours" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <!-- Choix de l'image -->
        <VBox spacing="5">
            <Label text="Image du workshop"/>
            <HBox spacing="10">
                <Button fx:id="browseImageBtn" text="Choisir une image" onAction="#handleImageBrowse"/>
                <Label fx:id="imageLabel" text="Aucune image choisie"/>
            </HBox>
            <Label fx:id="errorImage" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
        </VBox>

        <!-- Titre du workshop -->
        <VBox spacing="5">
            <Label text="Titre du workshop"/>
            <TextField fx:id="titreField" promptText="Entrez le titre"/>
            <Label fx:id="errorTitre" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
        </VBox>

        <!-- Catégorie -->
        <VBox spacing="5">
            <Label text="Catégorie du workshop"/>
            <ComboBox fx:id="categorieCombo" promptText="Sélectionnez une catégorie"/>
            <Label fx:id="errorCategorie" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
        </VBox>

        <!-- Description -->
        <VBox spacing="5">
            <Label text="Description du workshop"/>
            <TextArea fx:id="descriptionField" wrapText="true" prefRowCount="3"/>
            <Label fx:id="errorDescription" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
        </VBox>

        <!-- Sélection vidéo (optionnelle) -->
        <VBox spacing="5">
            <Label text="Vidéo du workshop (optionnelle)"/>
            <HBox spacing="10">
                <Button fx:id="browseVideoBtn" text="Choisir une vidéo" onAction="#handleVideoBrowse"/>
                <Label fx:id="videoLabel" text="Aucune vidéo choisie"/>
            </HBox>
            <Label fx:id="errorVideo" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
        </VBox>

        <!-- Boutons d'action -->
        <HBox alignment="CENTER" spacing="15">
            <Button fx:id="btnAjouterCours"
                    text="Ajouter"
                    style="-fx-background-color: #28a745; -fx-text-fill: white;"
                    onAction="#ajouterCours"/>
            <Button fx:id="btnAnnuler"
                    text="Annuler"
                    style="-fx-background-color: #6c757d; -fx-text-fill: white;"
                    onAction="#annulerCours"/>
        </HBox>

    </VBox>
</VBox>
