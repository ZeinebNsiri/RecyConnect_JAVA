<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.MediaView?>

<BorderPane fx:id="rootBorderPane"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.workshop.DetailsWorkshopFront"
            prefWidth="1200" prefHeight="800">


    <top>
        <VBox spacing="0">
            <HBox spacing="10" alignment="CENTER_LEFT"
                  style="-fx-background-color:#014421; -fx-padding:8;">
                <Label text="📞 +216 95 123 742" style="-fx-text-fill:white; -fx-font-size:14px;"/>
                <Label text="|" style="-fx-text-fill:white; -fx-font-size:14px;"/>
                <Label text="📧 RecyConnect@gmail.com" style="-fx-text-fill:white; -fx-font-size:14px;"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Label text="Suivez‑nous :   " style="-fx-text-fill:white; -fx-font-size:14px;"/>
            </HBox>

            <HBox spacing="20" alignment="CENTER_LEFT"
                  style="-fx-background-color:white; -fx-padding:15;">
                <ImageView fitHeight="40" fitWidth="40">

                    <Image url="@/mainlogo.png"/>
                </ImageView>


                <Label text="Accueil"      style="-fx-font:16px 'Segoe UI Bold'; -fx-text-fill:#014421;"/>
                <Label text="Nos produits" style="-fx-font:16px 'Segoe UI Bold'; -fx-text-fill:#014421;"/>
                <Label text="Évènements"   style="-fx-font:16px 'Segoe UI Bold'; -fx-text-fill:#014421;"/>
                <Label text="Workshops"    style="-fx-font:16px 'Segoe UI Bold'; -fx-text-fill:#014421;"/>
                <Label text="Forum"        style="-fx-font:16px 'Segoe UI Bold'; -fx-text-fill:#014421;"/>

                <Pane HBox.hgrow="ALWAYS"/>
                <Label text="🔔" style="-fx-font-size:18px; -fx-text-fill:#014421;"/>
                <Label text="🛒" style="-fx-font-size:18px; -fx-text-fill:#014421;"/>

                <MenuButton text="eya guirat"
                            style="-fx-font-size:14px; -fx-background-color:transparent; -fx-text-fill:#014421;">
                    <items>
                        <MenuItem text="👤 Mon Profil"/>
                        <MenuItem text="📑 Mes commandes"/>
                        <MenuItem text="🚪 Se déconnecter"/>
                    </items>
                </MenuButton>
            </HBox>
        </VBox>
    </top>


    <center>
        <VBox alignment="TOP_CENTER" spacing="20">

            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>


            <MediaView fx:id="mediaView" fitWidth="600" preserveRatio="true"/>


            <Label fx:id="titleLabel"
                   style="-fx-font-size:24px; -fx-font-weight:bold; -fx-text-fill:#014421;"/>


            <Label fx:id="categoryLabel"
                   style="-fx-font-size:14px; -fx-text-fill:#28a745;"/>


            <Label fx:id="descriptionLabel" wrapText="true"
                   style="-fx-font-size:14px; -fx-text-fill:#444;"/>


            <Button text="← Retour aux workshops"
                    onAction="#handleBack"
                    style="-fx-background-color:#6c757d; -fx-text-fill:white;"/>
        </VBox>
    </center>
</BorderPane>
