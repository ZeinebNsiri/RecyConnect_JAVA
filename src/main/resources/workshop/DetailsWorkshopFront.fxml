<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.workshop.DetailsWorkshopFront"
      alignment="TOP_CENTER" spacing="20"
      prefWidth="800" prefHeight="600">

    <!-- padding autour du contenu -->
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Vidéo -->
    <MediaView fx:id="mediaView"
               fitWidth="600"
               preserveRatio="true"/>

    <!-- Titre du workshop -->
    <Label fx:id="titleLabel"
           style="-fx-font-size:24px; -fx-font-weight:bold; -fx-text-fill:#014421;"/>

    <!-- Catégorie -->
    <Label fx:id="categoryLabel"
           style="-fx-font-size:14px; -fx-text-fill:#28a745;"/>

    <!-- Description -->
    <Label fx:id="descriptionLabel"
           wrapText="true"
           style="-fx-font-size:14px; -fx-text-fill:#444;"/>

    <!-- Bouton retour -->
    <Button text="← Retour aux workshops"
            onAction="#handleBack"
            style="-fx-background-color:#6c757d; -fx-text-fill:white;"/>
</VBox>
