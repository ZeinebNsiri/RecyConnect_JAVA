<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.StatistiquesUtilisateurController"
      spacing="20" alignment="CENTER" prefWidth="800" prefHeight="600"
      style="-fx-background-color: #f0fdf4;">

    <padding>
        <Insets top="20" left="20" right="20" bottom="20"/>
    </padding>

    <!-- Retour -->
    <Button text="⬅ Retour" onAction="#back"
            style="-fx-background-color: #28a745; -fx-text-fill: white;"/>

    <!-- Statistiques des utilisateurs selon les rôles -->
    <Text text="Répartition des utilisateurs par rôle" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <PieChart fx:id="rolePieChart" prefWidth="600" prefHeight="300">

    </PieChart>

    <!-- Statistiques des utilisateurs selon le statut -->
    <Text text="Répartition des utilisateurs selon le statut" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <PieChart fx:id="statusPieChart" prefWidth="600" prefHeight="300">

    </PieChart>

</VBox>
