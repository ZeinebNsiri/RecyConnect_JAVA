<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.Events.EventDetailsController"
            style="-fx-background-color: #f0f2f5;">

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent; -fx-background: transparent;">
            <VBox alignment="CENTER" spacing="30" style="-fx-padding: 40;">
                <HBox spacing="40" alignment="CENTER"
                      style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 2);">

                    <!-- Left side: Event information -->
                    <VBox spacing="15" prefWidth="500">
                        <ImageView fx:id="eventImageView" fitWidth="400" fitHeight="250" preserveRatio="true"
                                   style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1); -fx-background-radius: 10;" />

                        <Label fx:id="eventTitle" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label fx:id="eventDateTime" style="-fx-font-size: 14px; -fx-text-fill: #6c757d;" />
                        </HBox>

                        <Separator />

                        <VBox spacing="10" VBox.vgrow="ALWAYS">
                            <Label text="Description" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: transparent;">
                                <content>
                                    <Label fx:id="eventDescription" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: #212529;" />
                                </content>
                            </ScrollPane>
                        </VBox>

                        <Label fx:id="eventPlaces" style="-fx-font-weight: bold; -fx-text-fill: #198754;" />

                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Button fx:id="registerButton" text="📝 S'inscrire" onAction="#handleInscription"
                                    style="-fx-background-color: #198754; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20;" />
                            <Button text="⬅ Retour" onAction="#handleBack"
                                    style="-fx-background-color: #ced4da; -fx-text-fill: #212529; -fx-background-radius: 8; -fx-padding: 10 20;" />
                        </HBox>

                        <!-- Online meeting info - will be shown/hidden based on event type -->
                        <HBox fx:id="meetingContainer" spacing="10" alignment="CENTER_LEFT" visible="false"
                              style="-fx-padding: 15; -fx-background-color: #e9f5fe; -fx-background-radius: 8; -fx-border-color: #b8daff; -fx-border-radius: 8; -fx-border-width: 1;">
                            <Label text="🧑‍💻" style="-fx-font-size: 16px;" />
                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Label text="Événement en ligne" style="-fx-font-weight: bold; -fx-text-fill: #0d6efd; -fx-font-size: 15px;" />
                                <Label fx:id="meetingInfoLabel" style="-fx-text-fill: #212529; -fx-wrap-text: true;" wrapText="true" />
                                <Button fx:id="joinMeetingButton" text="🔗 Rejoindre la réunion" onAction="#handleJoinOnlineEvent"
                                        style="-fx-background-color: #0d6efd; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20; -fx-font-weight: bold; -fx-cursor: hand;" />
                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- Right side: Location and Details -->
                    <VBox spacing="15" alignment="TOP_LEFT" prefWidth="400">
                        <VBox style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-padding: 15;">
                            <Label text="📌 Détails de l'événement" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #014421;" />
                            <Separator />
                            <VBox spacing="12" style="-fx-padding: 10 0 0 0;">
                                <Label fx:id="eventDate" style="-fx-font-size: 14px; -fx-text-fill: #212529;" />
                                <Label fx:id="eventPeriod" style="-fx-font-size: 14px; -fx-text-fill: #212529;" />
                                <Label fx:id="eventLocation" style="-fx-font-size: 14px; -fx-text-fill: #212529;" />
                                <Label fx:id="onlineEventLabel" visible="false" style="-fx-font-size: 14px; -fx-text-fill: #0d6efd;" />
                            </VBox>
                        </VBox>

                        <!-- Map container - shown for on-site events only -->
                        <VBox fx:id="mapContainer" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-padding: 15;">
                            <Label text="🗺️ Localisation" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #014421;" />
                            <Separator />
                            <WebView fx:id="mapWebView" prefWidth="380" prefHeight="300" style="-fx-border-radius: 10; -fx-background-radius: 10;">
                                <VBox.margin>
                                    <Insets top="10" />
                                </VBox.margin>
                            </WebView>
                        </VBox>

                        <!-- Online event container - shown for online events only -->
                        <VBox fx:id="onlineEventContainer" visible="false" managed="false"
                              style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-padding: 15;">
                            <Label text="🧑‍💻 Informations de connexion" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #0d6efd;" />
                            <Separator />
                            <VBox spacing="12" style="-fx-padding: 10 0 0 0;">
                                <Label text="Pour accéder à cet événement en ligne, inscrivez-vous et utilisez le bouton 'Rejoindre la réunion' au moment de l'événement."
                                       style="-fx-font-size: 14px; -fx-text-fill: #212529;" wrapText="true" />

                                <HBox spacing="5" alignment="CENTER_LEFT" style="-fx-padding: 5 0;">
                                    <Label text="🔔" style="-fx-font-size: 16px;" />
                                    <Label text="Le lien de connexion sera disponible 15 minutes avant le début de l'événement."
                                           style="-fx-font-size: 14px; -fx-text-fill: #0d6efd; -fx-font-style: italic;" wrapText="true" />
                                </HBox>


                            </VBox>
                        </VBox>
                    </VBox>

                </HBox>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>