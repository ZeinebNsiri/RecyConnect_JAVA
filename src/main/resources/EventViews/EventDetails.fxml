<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.Events.EventDetailsController"
            style="-fx-background-color: #f0f5f1;">

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent; -fx-background: transparent;">
            <VBox alignment="CENTER" spacing="30" style="-fx-padding: 40;">
                <HBox spacing="40" alignment="CENTER"
                      style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0, 0, 3);">

                    <!-- Left side: Event information -->
                    <VBox spacing="18" prefWidth="500">
                        <ImageView fx:id="eventImageView" fitWidth="400" fitHeight="250" preserveRatio="true"
                                   style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1); -fx-background-radius: 10;" />

                        <Label fx:id="eventTitle" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #198754;" />

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label fx:id="eventDateTime" style="-fx-font-size: 14px; -fx-text-fill: #6c757d;" />
                        </HBox>

                        <Separator style="-fx-background-color: #e6f3ec;" />

                        <VBox spacing="12" VBox.vgrow="ALWAYS">
                            <Label text="Description" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2d6a4f;" />
                            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: transparent;">
                                <content>
                                    <Label fx:id="eventDescription" wrapText="true" style="-fx-font-size: 15px; -fx-text-fill: #212529; -fx-line-spacing: 1.2;" />
                                </content>
                            </ScrollPane>
                        </VBox>

                        <Label fx:id="eventPlaces" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #198754;" />

                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Button fx:id="registerButton" text="📝 S'inscrire" onAction="#handleInscription"
                                    style="-fx-background-color: #198754; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 12 24; -fx-font-weight: bold; -fx-font-size: 14px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0, 0, 1);" />
                            <Button text="⬅ Retour" onAction="#handleBack"
                                    style="-fx-background-color: #e9ecef; -fx-text-fill: #495057; -fx-background-radius: 8; -fx-padding: 12 24; -fx-font-size: 14px;" />
                        </HBox>

                        <!-- Online meeting info - will be shown/hidden based on event type -->
                        <HBox fx:id="meetingContainer" spacing="15" alignment="CENTER_LEFT" visible="false"
                              style="-fx-padding: 18; -fx-background-color: #e6f3ec; -fx-background-radius: 10; -fx-border-color: #b7dfb9; -fx-border-radius: 10; -fx-border-width: 1;">
                            <Label text="🧑‍💻" style="-fx-font-size: 18px;" />
                            <VBox spacing="10" HBox.hgrow="ALWAYS">
                                <Label text="Événement en ligne" style="-fx-font-weight: bold; -fx-text-fill: #198754; -fx-font-size: 16px;" />
                                <Label fx:id="meetingInfoLabel" style="-fx-text-fill: #212529; -fx-wrap-text: true; -fx-font-size: 14px;" wrapText="true" />
                                <Button fx:id="joinMeetingButton" text="🔗 Rejoindre la réunion" onAction="#handleJoinOnlineEvent"
                                        style="-fx-background-color: #198754; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0, 0, 1);" />
                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- Right side: Location and Details -->
                    <VBox spacing="20" alignment="TOP_LEFT" prefWidth="420">
                        <VBox style="-fx-background-color: #f8f9fa; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.03), 5, 0, 0, 1);">
                            <Label text="📌 Détails de l'événement" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #198754;" />
                            <Separator style="-fx-background-color: #e6f3ec;" />
                            <VBox spacing="15" style="-fx-padding: 12 0 0 0;">
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="📅" style="-fx-font-size: 15px;" />
                                    <Label fx:id="eventDate" style="-fx-font-size: 15px; -fx-text-fill: #212529;" />
                                </HBox>
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="⏱️" style="-fx-font-size: 15px;" />
                                    <Label fx:id="eventPeriod" style="-fx-font-size: 15px; -fx-text-fill: #212529;" />
                                </HBox>
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="📍" style="-fx-font-size: 15px;" />
                                    <Label fx:id="eventLocation" style="-fx-font-size: 15px; -fx-text-fill: #212529;" />
                                </HBox>
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="🧑‍💻" style="-fx-font-size: 15px;" />
                                    <Label fx:id="onlineEventLabel" visible="false" style="-fx-font-size: 15px; -fx-text-fill: #198754; -fx-font-weight: bold;" />
                                </HBox>
                            </VBox>
                        </VBox>

                        <!-- Map container - shown for on-site events only -->
                        <VBox fx:id="mapContainer" style="-fx-background-color: #f8f9fa; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.03), 5, 0, 0, 1);">
                            <Label text="🗺️ Localisation" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #198754;" />
                            <Separator style="-fx-background-color: #e6f3ec;" />
                            <WebView fx:id="mapWebView" prefWidth="380" prefHeight="300" style="-fx-border-radius: 10; -fx-background-radius: 10;">
                                <VBox.margin>
                                    <Insets top="12" />
                                </VBox.margin>
                            </WebView>
                        </VBox>

                        <!-- Online event container - shown for online events only -->
                        <VBox fx:id="onlineEventContainer" visible="false" managed="false"
                              style="-fx-background-color: #f8f9fa; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.03), 5, 0, 0, 1);">
                            <Label text="🧑‍💻 Informations de connexion" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #198754;" />
                            <Separator style="-fx-background-color: #e6f3ec;" />
                            <VBox spacing="15" style="-fx-padding: 12 0 0 0;">
                                <Label text="Pour accéder à cet événement en ligne, inscrivez-vous et utilisez le bouton 'Rejoindre la réunion' au moment de l'événement."
                                       style="-fx-font-size: 15px; -fx-text-fill: #212529;" wrapText="true" />

                                <HBox spacing="8" alignment="CENTER_LEFT" style="-fx-padding: 8; -fx-background-color: #e6f3ec; -fx-background-radius: 8;">
                                    <Label text="🔔" style="-fx-font-size: 16px;" />
                                    <Label text="Le lien de connexion sera disponible 15 minutes avant le début de l'événement."
                                           style="-fx-font-size: 14px; -fx-text-fill: #198754; -fx-font-style: italic;" wrapText="true" />
                                </HBox>
                            </VBox>
                        </VBox>
                    </VBox>

                </HBox>

                <!-- Footer -->
                <HBox alignment="CENTER" style="-fx-padding: 0 0 20 0;">
                    <Label text="© 2025 Événements Écologiques" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>