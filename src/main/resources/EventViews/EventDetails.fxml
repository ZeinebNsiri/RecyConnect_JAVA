<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.Events.EventDetailsController"
            style="-fx-background-color: #f0f5f1;">

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
            <VBox alignment="CENTER" spacing="30" style="-fx-padding: 40;">
                <HBox spacing="40" alignment="CENTER"
                      style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0, 0, 3);">

                    <!-- Left side -->
                    <VBox spacing="18" prefWidth="500">
                        <ImageView fx:id="eventImageView" fitWidth="400" fitHeight="250" preserveRatio="true"
                                   style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);" />

                        <Label fx:id="eventTitle" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #198754;" />

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label fx:id="eventDateTime" style="-fx-font-size: 14px; -fx-text-fill: #6c757d;" />
                        </HBox>

                        <Separator style="-fx-background-color: #e6f3ec;" />

                        <VBox spacing="12" VBox.vgrow="ALWAYS">
                            <Label text="Description" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2d6a4f;" />
                            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: transparent;">
                                <content>
                                    <Label fx:id="eventDescription" wrapText="true" style="-fx-font-size: 15px; -fx-text-fill: #212529;" />
                                </content>
                            </ScrollPane>
                        </VBox>

                        <Label fx:id="eventPlaces" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #198754;" />

                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Button fx:id="registerButton" text="📝 S'inscrire" onAction="#handleInscription"
                                    style="-fx-background-color: #198754; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 12 24;" />
                            <Button text="⬅ Retour" onAction="#handleBack"
                                    style="-fx-background-color: #e9ecef; -fx-text-fill: #495057; -fx-background-radius: 8; -fx-padding: 12 24;" />
                        </HBox>

                        <!-- Online Meeting Section -->
                        <HBox fx:id="meetingContainer" spacing="15" alignment="CENTER_LEFT" visible="false"
                              style="-fx-padding: 18; -fx-background-color: #e6f3ec; -fx-background-radius: 10;">
                            <Label text="🧑‍💻" style="-fx-font-size: 18px;" />
                            <VBox spacing="10" HBox.hgrow="ALWAYS">
                                <Label text="Événement en ligne" style="-fx-font-weight: bold; -fx-text-fill: #198754;" />
                                <Label fx:id="meetingInfoLabel" wrapText="true" style="-fx-text-fill: #212529;" />
                                <Button fx:id="joinMeetingButton" text="🔗 Rejoindre la réunion" onAction="#handleJoinOnlineEvent"
                                        style="-fx-background-color: #198754; -fx-text-fill: white; -fx-background-radius: 8;" />
                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- Right side: Details + Map -->
                    <VBox spacing="20" alignment="TOP_LEFT" prefWidth="420">
                        <VBox style="-fx-background-color: #f8f9fa; -fx-background-radius: 12; -fx-padding: 20;">
                            <Label text="📌 Détails de l'événement" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #198754;" />
                            <Separator style="-fx-background-color: #e6f3ec;" />
                            <VBox spacing="15">
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="📅" />
                                    <Label fx:id="eventDate" style="-fx-text-fill: #212529;" />
                                </HBox>
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="⏱️" />
                                    <Label fx:id="eventPeriod" style="-fx-text-fill: #212529;" />
                                </HBox>
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="📍" />
                                    <Label fx:id="eventLocation" style="-fx-text-fill: #212529;" />
                                </HBox>
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="🧑‍💻" />
                                    <Label fx:id="onlineEventLabel" visible="false" style="-fx-text-fill: #198754;" />
                                </HBox>
                            </VBox>
                        </VBox>

                        <!-- ✅ Fixed: Map container with SwingNode inside -->
                        <VBox fx:id="mapContainer" style="-fx-background-color: #f8f9fa; -fx-background-radius: 12; -fx-padding: 20;">
                            <Label text="🗺️ Localisation" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #198754;" />
                            <Separator style="-fx-background-color: #e6f3ec;" />
                            <AnchorPane fx:id="mapSwingContainer" prefHeight="300" prefWidth="400" />
                        </VBox>

                        <!-- Online container -->
                        <VBox fx:id="onlineEventContainer" visible="false" managed="false"
                              style="-fx-background-color: #f8f9fa; -fx-background-radius: 12; -fx-padding: 20;">
                            <Label text="🧑‍💻 Informations de connexion" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #198754;" />
                            <Separator style="-fx-background-color: #e6f3ec;" />
                            <VBox spacing="15">
                                <Label text="Pour accéder à cet événement en ligne, inscrivez-vous et utilisez le bouton 'Rejoindre la réunion' au moment de l'événement."
                                       wrapText="true" style="-fx-text-fill: #212529;" />
                                <HBox spacing="8" alignment="CENTER_LEFT" style="-fx-background-color: #e6f3ec; -fx-background-radius: 8;">
                                    <Label text="🔔" />
                                    <Label text="Le lien de connexion sera disponible 15 minutes avant le début de l'événement."
                                           wrapText="true" style="-fx-text-fill: #198754; -fx-font-style: italic;" />
                                </HBox>
                            </VBox>
                        </VBox>
                    </VBox>
                </HBox>

                <HBox alignment="CENTER">
                    <Label text="© 2025 Événements Écologiques" style="-fx-text-fill: #6c757d;" />
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
