<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.Events.RecommendationController"
      style="-fx-background-color: #f8f9fa;" spacing="10">

    <!-- Header Section -->
    <VBox spacing="10" style="-fx-background-color: linear-gradient(to right, #043c1c, #198754); -fx-padding: 20;">
        <Label text="Événements Recommandés"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        <Label fx:id="welcomeLabel"
               style="-fx-font-size: 16px; -fx-text-fill: white;"/>

        <Button text="Retour aux événements" onAction="#handleBackToEvents"
                style="-fx-background-color: white; -fx-text-fill: #198754; -fx-font-weight: bold; -fx-padding: 8 16;"/>
    </VBox>

    <!-- Scrollable content section -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-padding: 10;">
        <content>
            <TilePane fx:id="cardContainer"
                      hgap="20" vgap="20" prefColumns="3"
                      style="-fx-padding: 10; -fx-alignment: top-center;">
            </TilePane>
        </content>
    </ScrollPane>
</VBox>
