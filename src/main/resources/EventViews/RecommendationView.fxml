<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.Events.RecommendationController"
            style="-fx-background-color: #f8f9fa;" prefWidth="1200" prefHeight="800">

    <top>
        <VBox spacing="15" style="-fx-background-color: linear-gradient(to right, #043c1c, #198754); -fx-padding: 25 30 25 30;">
            <Label text="Événements Recommandés"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0.2, 0, 1);"/>
            <Label fx:id="welcomeLabel"
                   style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background: #f8f9fa; -fx-border-color: transparent; -fx-padding: 0;">
            <TilePane fx:id="cardContainer" hgap="20" vgap="20" prefTileWidth="350"
                      style="-fx-background-color: #f8f9fa; -fx-padding: 20 15 20 15;"
                      alignment="CENTER"/>
        </ScrollPane>
    </center>

    <bottom>
        <HBox style="-fx-background-color: #e9ecef; -fx-padding: 10 20;" alignment="CENTER_RIGHT">
            <Label text="© 2025 RecyConnect" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
        </HBox>
    </bottom>
</BorderPane>
