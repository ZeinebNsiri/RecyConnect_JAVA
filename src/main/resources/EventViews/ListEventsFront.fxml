<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.Events.ListEventsFrontController"
            prefWidth="1000" prefHeight="800">

    <top>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Label text="Événements"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #043c1c;" />
            <HBox spacing="10">
                <Button text="Mes Réservations"
                        style="-fx-background-color: #198754; -fx-text-fill: white;" />
                <Button text="Événements Recommandés"
                        style="-fx-background-color: #198754; -fx-text-fill: white;" />
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <FlowPane fx:id="eventFlowPane" hgap="20" vgap="20" prefWrapLength="800"
                      style="-fx-background-color: #f5f5f5;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
            </FlowPane>
        </ScrollPane>
    </center>
</BorderPane>
